<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/healthTipsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HealthTips">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:title="Health Tips"
                app:titleTextColor="@android:color/white" />

            <!-- Page Heading -->
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Tips for a Better Life"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <!-- Tip Cards -->
            <!-- Repeatable card style for each tip -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Drink at least 8 glasses of water every day to stay hydrated."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Get at least 7–8 hours of quality sleep each night."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Eat more fruits and vegetables to improve your immune system."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Exercise regularly to maintain a healthy body weight and improve mood."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Avoid smoking and limit alcohol to reduce long-term health risks."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Wash your hands frequently to prevent infections."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Get regular health checkups and screenings."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="18dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
